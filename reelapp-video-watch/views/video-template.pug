extends video-layout.pug

block head
	link(href='https://vjs.zencdn.net/7.2.3/video-js.css', rel='stylesheet')
	script(src='https://vjs.zencdn.net/7.2.3/video.js')

block body
	<video autoplay style="display:block; margin-left: auto; margin-right: auto; width:100%; height:80%" id="my-video" class="video-js" controls preload="auto" poster="" data-setup="{}">
	<source src="#{mp4source}" type='video/mp4'>
	<source src="#{webmsource}" type='video/webm'>
	<p class="vjs-no-js">
	To view this video please enable JavaScript, and consider upgrading to a web browser that
	<a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
	</p>
	</video>
